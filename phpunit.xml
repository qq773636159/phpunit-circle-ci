<?xml version="1.0" ?>
<phpunit>
    <testsuites>
        <testsuite>
            <directory suffix = ".test.php">test</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-text" target="php://stdout" showUnconveredFiles="true" />
    </logging>

    <filter>
        <whitelist>
            <directory>src</directory>
        </whitelist>
    </filter>
</phpunit>